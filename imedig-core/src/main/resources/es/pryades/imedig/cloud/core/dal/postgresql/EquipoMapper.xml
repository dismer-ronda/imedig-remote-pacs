<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="es.pryades.imedig.cloud.core.dal.ibatis.EquipoMapper">

	<sql id="where">
	    <if test="nombre != null">
			AND UPPER(nombre) like UPPER('%${nombre}%')   
        </if>
		<if test="modalidad != null">
			AND modalidad = #{modalidad}   
        </if>
	</sql>
	
	<select id="getNumberOfRows" parameterType="es.pryades.imedig.cloud.dto.Query" resultType="int">
		select count(1) 
		from susc_equipos 
		<where><include refid="where"/></where>
	</select>

	<select id="getPage" parameterType="es.pryades.imedig.cloud.dto.Query" resultType="es.pryades.imedig.cloud.dto.Equipo">
		select 
			id,
			nombre, 
			aetitle,
			modalidad
		from susc_equipos
		<where><include refid="where"/></where>
		order by nombre asc
		LIMIT #{pageSize} OFFSET (#{pageSize} * (#{pageNumber} - 1))
	</select>

	<select id="getRows" parameterType="es.pryades.imedig.cloud.dto.Query" resultType="es.pryades.imedig.cloud.dto.Equipo">
		select 
			id,
			nombre, 
			aetitle,
			modalidad
		from susc_equipos
		<where><include refid="where"/></where>
		order by nombre asc
	</select>
	
	<select id="getRow" parameterType="es.pryades.imedig.cloud.dto.Query" resultType="es.pryades.imedig.cloud.dto.Equipo">
		select * from susc_equipos 
		where id = #{id}
	</select>

	<insert id="addRow" parameterType="es.pryades.imedig.cloud.dto.Equipo">

		<selectKey keyProperty="id" resultType="int" order="BEFORE">
			SELECT nextval('gencfg');
		</selectKey>

		insert into susc_equipos
		(
			id,
			nombre, 
			aetitle,
			modalidad
		)
		values
		(
			#{id},
			#{nombre},
			#{aetitle},
			#{modalidad}
		)
	</insert>

	<update id="setRow" parameterType="es.pryades.imedig.cloud.dto.Equipo">
		update susc_equipos
		set
			nombre=#{nombre},
			aetitle=#{aetitle},
			modalidad=#{modalidad}
		where id = #{id}
	</update>

	<update id="delRow" parameterType="es.pryades.imedig.cloud.dto.Equipo">
		delete from susc_equipos where id = #{id}
	</update>

</mapper>
