<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>imedig-web</display-name>
  
  <context-param>
    <param-name>org.restlet.application</param-name>
    <param-value>es.pryades.imedig.servlets.WadoApplication</param-value>
  </context-param>

  <servlet>
    <display-name>imedig-init</display-name>
    <servlet-name>imedig-init</servlet-name>
    <servlet-class>es.pryades.imedig.servlets.InitServlet</servlet-class>
	<load-on-startup>1</load-on-startup>	
  </servlet>

  <servlet>
    <description></description>
    <display-name>services</display-name>
    <servlet-name>services</servlet-name>
    <servlet-class>org.restlet.ext.servlet.ServerServlet</servlet-class>
	<load-on-startup>2</load-on-startup>	
  </servlet>
  
  <servlet-mapping>
    <servlet-name>services</servlet-name>
    <url-pattern>/services/*</url-pattern>
  </servlet-mapping>

<context-param>
    <param-name>productionMode</param-name>
    <param-value>true</param-value>
  </context-param>
  
  <servlet>
    <servlet-name>Viewer Application</servlet-name>
    <servlet-class>com.vaadin.server.VaadinServlet</servlet-class>
	<init-param>
    	<description>Vaadin UI</description>
        <param-name>UI</param-name>
        <param-value>es.pryades.imedig.viewer.application.ViewerApplicationUI</param-value>
    </init-param>    
    <!-- <init-param>
    	<description>Application widgetset</description>
    	<param-name>widgetset</param-name>
    	<param-value>es.pryades.imedig.viewer.widgetset.Imedig_ViewerWidgetset</param-value>
    </init-param>-->
	<load-on-startup>1</load-on-startup>	
  </servlet>
  
  <servlet-mapping>
    <servlet-name>Viewer Application</servlet-name>
    <url-pattern>/*</url-pattern>
    <url-pattern>/VAADIN/*</url-pattern>
  </servlet-mapping>
    
  <session-config>
    <session-timeout>3600</session-timeout>
  </session-config>

</web-app>